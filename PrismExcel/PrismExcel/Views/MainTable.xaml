<UserControl
    x:Class="PrismExcel.Views.MainTable"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:viewmodels="clr-namespace:PrismExcel.ViewModels"
    Width="500"
    Height="500"
    d:DataContext="{d:DesignInstance Type=viewmodels:MainTableViewModel}"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">
    <StackPanel Background="Beige">
        <Label Content="here is main table" />
        <Button Command="{Binding OpenFilterDialog}" Content="Open Filter" />
        <DataGrid
            Height="400"
            Margin="20"
            AutoGenerateColumns="True"
            ItemsSource="{Binding Contacts}" />
    </StackPanel>
</UserControl>
